{
  "manifest_version": 3,
  "version": "1.0",

  "name": "Hide Facebook Watch Video Icon And Short Videos",
  "description": "Hide Facebook Watch Video Icon And Short Videos. Reason huge time lose facebook short video and watch video",
  "author": "Md Akram Sheikh",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Click Me",
    "default_popup": "popup.html"
  },

  "permissions": ["activeTab", "webNavigation", "scripting"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}
